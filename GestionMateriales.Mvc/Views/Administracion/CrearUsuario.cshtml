@model GestionMateriales.Mvc.ViewModels.Administracion.CrearUsuarioViewModel

@{
    ViewBag.Title = "Registrarse";
}

<div class="card offset-4 col-4">
    <div class="card-body">
        <h1>Crear Usuario</h1>
        <form method="post" asp-controller="Administracion" asp-action="CrearUsuario">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre">Nombre y Apellido</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contrasenia">Contraseña</label>
                <input asp-for="Contrasenia" class="form-control" />
                <span asp-validation-for="Contrasenia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmarContrasenia">Confirmar Contraseña</label>
                <input asp-for="ConfirmarContrasenia" class="form-control" />
                <span asp-validation-for="ConfirmarContrasenia" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-outline-primary btnLogin">Guardar</button>
        </form>
    </div>
</div>

@model GestionMateriales.Mvc.ViewModels.Administracion.EditarUsuarioViewModel

@{
    ViewBag.Title = "Edit User";
}

<div class="card">
    <div class="card-body">


        <h1>Editar Usuario</h1>

        <form method="post" class="mt-3" asp-controller="Administracion" asp-action="EditarUsuario">
            <div class="form-group row">
                <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Id" disabled class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Email" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="UserName" class="form-control">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="NombreCompleto" class="col-sm-2 col-form-label">Nombre Completo</label>
                <div class="col-sm-10">
                    <input asp-for="NombreCompleto" class="form-control">
                </div>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-outline-primary"><i class="fad fa-check"></i> Actualizar</button>
                    <a asp-action="Usuarios" class="btn btn-outline-primary"><i class="fad fa-times"></i> Cancelar</a>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h3>Roles</h3>
                </div>
                <div class="card-body">
                    @if (Model.Roles.Any())
                    {
                        foreach (var role in Model.Roles)
                        {
                            <h5 class="card-title">@role</h5>
                        }
                    }
                    else
                    {
                        <h5 class="card-title">Ninguno</h5>
                    }
                </div>
                <div class="card-footer">
                    <a asp-action="AdministrarUsuarioRol" asp-route-userId="@Model.Id" class="btn btn-outline-primary"><i class="fad fa-tasks"></i> Administrar Roles</a>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h3>Permisos</h3>
                </div>
                <div class="card-body">
                    @if (Model.Claims.Any())
                    {
                        foreach (var claim in Model.Claims)
                        {
                            <h5 class="card-title">@claim</h5>
                        }
                    }
                    else
                    {
                        <h5 class="card-title">Ninguno</h5>
                    }
                </div>
                <div class="card-footer">
                    <a asp-action="AdministrarPermisosUsuario" asp-route-userId="@Model.Id" style="width:auto" class="btn btn-outline-primary"><i class="fad fa-tasks"></i> Administrar Permisos</a>
                </div>
            </div>
        </form>
    </div>
</div>
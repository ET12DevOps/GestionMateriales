@model IEnumerable<GestionMateriales.Mvc.Identity.ApplicationRole>

@{
    ViewBag.Title = "Roles";
}

<div class="card">
    <div class="card-body">
        <h1>Roles</h1>
        <a asp-action="CrearRol" asp-controller="Administracion" class="btn btn-outline-primary mb-3" style="width:auto"><i class="far fa-user-cog"></i> Nuevo rol</a>

        @if (Model.Any())
        {
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Rol</th>
                        <th scope="col">Area</th>
                        <th scope="col">Creado Por</th>
                        <th scope="col">Fecha Creación</th>
                        <th scope="col">Dirección IP</th>
                        <th scope="col">Habilitado</th>
                        <th scope="col" width="10%">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>@role.Id</td>
                            <td>@role.Name</td>
                            <td>@role.Area</td>
                            <td>@role.CreatedBy</td>
                            <td>@role.CreationDate</td>
                            <td>@role.CreationIp</td>
                            <td>@role.Habilitado</td>
                            <td>
                                <form asp-action="BorrarRol" asp-route-id="@role.Id" method="post">
                                    <a asp-controller="Administracion" asp-action="EditarRol" asp-route-id="@role.Id" class="btn btn-outline-primary"><i class="far fa-edit"></i></a>
                                    <span id="confirmDeleteSpan_@role.Id" style="display:none">
                                        <span>Seguro?</span>
                                        <button type="submit" class="btn btn-outline-danger"><i class="far fa-check"></i></button>
                                        <a href="#" class="btn btn-outline-primary" onclick="confirmDelete('@role.Id', false)"><i class="far fa-times"></i></a>
                                    </span>

                                    <span id="deleteSpan_@role.Id">
                                        <a href="#" class="btn btn-outline-danger" onclick="confirmDelete('@role.Id', true)"><i class="far fa-trash-alt"></i></a>
                                    </span>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="card">
                <div class="card-header">
                    No roles created yet
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        Use the button below to create a user
                    </h5>
                    <a class="btn btn-primary" style="width:auto" asp-controller="Administracion" asp-action="CrearUsuario">Nuevo rol</a>
                </div>
            </div>
        }

    </div>
</div>

<script>
    function confirmDelete(uniqueId, isTrue) {

    var deleteSpan = 'deleteSpan_' + uniqueId;
    var confirmDeleteSpan = 'confirmDeleteSpan_' + uniqueId;

    if (isTrue) {
        $('#' + deleteSpan).hide();
        $('#' + confirmDeleteSpan).show();
    } else {
        $('#' + deleteSpan).show();
        $('#' + confirmDeleteSpan).hide();
    }
}
</script>
@model List<GestionMateriales.Mvc.ViewModels.Administracion.EditarUsuarioEnRol>

@{
    var roleId = ViewBag.roleId;
}

<div class="card">
    <div class="card-body">
        <form method="post">
            <div class="card">
                <div class="card-header">
                    <h2>Administrar usuarios</h2>
                </div>
                <div class="card-body">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="form-check m-1">
                            <input type="hidden" asp-for="@Model[i].UserId" />
                            <input type="hidden" asp-for="@Model[i].UserName" />
                            <input asp-for="@Model[i].Seleccionado" class="form-check-input" />
                            <label class="form-check-label" asp-for="@Model[i].Seleccionado">@Model[i].UserName</label>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <input type="submit" value="Actualizar" class="btn btn-outline-primary" style="width:auto" />
                    <a asp-action="EditarRol" asp-route-id="@roleId" class="btn btn-outline-primary" style="width:auto">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>
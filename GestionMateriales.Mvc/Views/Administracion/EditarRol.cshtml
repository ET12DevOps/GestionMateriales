@model GestionMateriales.Mvc.ViewModels.Administracion.EditarRolViewModel

@{
    ViewBag.Title = "Edit Role";
}

<div class="card">
    <div class="card-body">
        <h1>Editar Rol</h1>

        <form method="post" class="mt-3" asp-controller="Administracion" asp-action="EditarRol">
            <div class="form-group row">
                <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Id" disabled class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="NombreRol" class="col-sm-2 col-form-label">Nombre</label>
                <div class="col-sm-10">
                    <input asp-for="NombreRol" class="form-control">
                    <span asp-validation-for="NombreRol" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Area" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Area" class="form-control">
                    <span asp-validation-for="Area" class="text-danger"></span>
                </div>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-outline-primary">Actualizar</button>
                    <a asp-action="Roles" class="btn btn-outline-primary">Cancelar</a>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h3>Usuarios asignados al rol</h3>
                </div>
                <div class="card-body">
                    @if (Model.Users.Any())
                    {
                        foreach (var user in Model.Users)
                        {
                            <h5 class="card-title">@user</h5>
                        }
                    }
                    else
                    {
                        <h5 class="card-title">None at the moment</h5>
                    }
                </div>
                <div class="card-footer">
                    <a asp-controller="Administracion" asp-action="EditarUsuarioEnRol" asp-route-roleId="@Model.Id" class="btn btn-outline-primary">Administrar usuarios</a>
                </div>
            </div>
        </form>
    </div>
</div>